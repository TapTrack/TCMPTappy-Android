<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:layout_width="match_parent"
    tools:layout_height="match_parent"
    tools:paddingTop="4dp"
    tools:paddingLeft="8dp"
    tools:paddingRight="8dp"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_command_data_scroller"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_send"
        app:layout_constraintVertical_chainStyle="packed"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_command_data"
            android:layout_width="0dp"
            android:layout_height="0dp"
            >
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/br_button_barrier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nsv_command_data_scroller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="bt_send, bt_cancel"
        />
    <androidx.appcompat.widget.AppCompatButton
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/bt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/bt_send"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</merge>
